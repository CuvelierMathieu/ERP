<Window x:Class="ERP.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mainwindowparts="clr-namespace:ERP.UI.MainWindowParts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <mainwindowparts:MenuBar DockPanel.Dock="Top"/>
        <mainwindowparts:Footer DockPanel.Dock="Bottom"/>
        <mainwindowparts:NavigationMenu DockPanel.Dock="Left"/>
        <mainwindowparts:MainFrame/>
    </DockPanel>
</Window>
