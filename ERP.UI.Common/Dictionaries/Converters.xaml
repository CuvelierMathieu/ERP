<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:ERP.UI.Common.Converters">
    
    <converters:ListToSumConverter x:Key="ListToSumConverter"/>
    <converters:SubstractMultiValueConverter x:Key="SubstractMultiValueConverter"/>
    <converters:DividerMultiConverter x:Key="DividerMultiConverter"/>
    
    <converters:ThicknessToDoubleConverter x:Key="LeftThicknessToDoubleConverter" ThicknessPart="Left"/>
    <converters:ThicknessToDoubleConverter x:Key="RightThicknessToDoubleConverter" ThicknessPart="Right"/>
    <converters:ThicknessToDoubleConverter x:Key="TopThicknessToDoubleConverter" ThicknessPart="Top"/>
    <converters:ThicknessToDoubleConverter x:Key="BottomThicknessToDoubleConverter" ThicknessPart="Bottom"/>

</ResourceDictionary>